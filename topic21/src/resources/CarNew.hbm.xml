<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="db.CarNew" table="car">
    <id column="VIN" name="vin" type="string">
    </id>
    <property column="manufacturer" name="manufacturer" type="string"/>
    <property column="model_name" name="model" type="string"/>
    <property column="release_year" name="releaseYear" type="integer"/>
    <property column="information" name="information" type="string"/>
    <property column="car_owner" name="carOwner" type="integer"/>

  </class>
</hibernate-mapping>